<header id="navbar" class="topmargin">
  <nav class="navbar navbar-expand-lg navbar-light bg-light  mb-5 fixed-top">
    <a class=" site-name navbar-brand h" href="/">
      <h2>MyCart</h2>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <div style="padding-left :20%;">
        <ul class="navbar-nav   ">

          <div class="pl-5">
            <li class="nav-item ">
              <a class="nav-link " href="/mobile"><b>Mobile</b></a>
            </li>
          </div>

          <div class="pl-5">
            <li class="nav-item " style="margin: left 5%;">
              <a class="nav-link p-auto" href="/television"><b>Television</b></a>
            </li>
          </div>

          <div class="pl-5">
            <li class="nav-item ">
              <a class="nav-link p-auto" href="/laptop"><b>Laptop</b></a>
            </li>
          </div>


          <div class="pl-5">
            <li class="nav-item ">
              <a class="nav-link p-auto" href="/cart"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                  fill="currentColor" class="bi bi-cart-fill" viewBox="0 0 16 16">
                  <path
                    d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg><b>Cart <span class="badge-danger badge  " id="cart-count">
                  {{#if cartCount}}
                  {{cartCount}}
                  
                  {{else}}
                  0
                  {{/if}}</span></b>
              </a>
            </li>
          </div>

        </ul>
      </div>

      <div class="ml-auto">
        <form class="form-inline my-2 my-lg-0 ">
          <input class="form-control mr-sm-2 " type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-dark my-2 my-sm-0 m-2" type="submit">Search</button>
        </form>
      </div>

      <div class="dropdown pl-2">
        <button class="btn font-weight-bold btn-light border-0 dropdown-toggle" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle"
            viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
            <path fill-rule="evenodd"
              d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
          </svg>
          {{#if user}}
          {{user.Username}}
          {{else}}
          Sign In
          {{/if}}
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          {{#if user}}
          <a class="dropdown-item font-weight-bold" href="/settings">Settings </a>
          <a class="dropdown-item font-weight-bold" href="/logout">Logout </a>
          {{else}}
          <a class="dropdown-item font-weight-bold" href="/login">Login </a>
          {{/if}}


        </div>



      </div>

    </div>
  </nav>
</header>