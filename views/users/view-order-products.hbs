<section class="topmargin">
    <div class="p-4 " style=" ; width:100%; height:100vh">
        <div class="col-md-9 ">
            <div class="pl-5 pb-2">
                <h3>Your Cart</h3>
            </div>

            <div class="container  m-2 " style="display:inline-block width:75% ">


                <table class="table float-left bg-light" style=" width:100%; ">
                    <thead>
                        <tr>
                             <th style="float-left ;width:25%">Image</th>
                            <th style="float-left ;width:25%">Item</th>
                            <th style="float-left ;width:25%">Quantity</th>
                            <th style="float-left ;width:25%">Price</th>
                        </tr>


                    </thead>
                    <tbody>
                        {{#each products}}

                        <tr>
                             {{#each this.orderItems}}
                            <td style="float-left ;width:25%" >
                                <div>
                                    <img src="/product-images/{{../this.item}}.jpg" alt="" style="width:100px ; height:100px">
                                </div>
                            </td>
                           
                            <td style="float-left ;width:25%" class="pt-4" >
                                <div>
                                    <a href="">{{this.Name}}</a>
                                </div>
                            </td>

                            <td style="float-left ;width:25%" class="pt-4 pl-4">
                                <div>
                                    <p>{{../this.quantity}}</p>
                                </div>
                            </td>

                            <td style="float-left ;width:25%" class="pt-4">
                                <div>
                                    <p class="p">{{this.Price}} (per piece)</p>
                                </div>
                            </td>
                            {{/each}}

                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>








    </div>




</section>