<section>
    <div class="container ">
        <div class="row align-center">

            <div class="  col-md-6">
                <h2 class="text-center">Edit Product</h2>
                <form action="/admin/edit-product/{{productDetails._id}}" method="POST" enctype="multipart/form-data">
                
                    <label for="product-name">Product Name</label>
                    <input type="text" id="product-name " class="form-control" name="Name" required value='{{productDetails.Name}}'>

                    <label for="category">Category</label>
                    <input type="text" class="form-control" name="Category" id='product-category' required value="{{productDetails.Category}}">
                    

                    <label for="description">Description</label>
                    <textarea type="text" class="form-control" name="Description" id="product-description" >{{productDetails.Description}}</textarea>

                    <label for="price">Price</label>
                    <input type="number" class="form-control" id="product-price" name="Price" required value="{{productDetails.Price}}">


                    <label for="image" class="form-label">Image</label>
                    <input class="form-control " type="file" id="product-image" name="Image" required onchange="changeImage(event)">

                    <input type="submit" class="btn btn-primary mt-3" value="Submit">
                </form>

            </div>
             <div class="col-md-6 text-center p-3">
                <h3>Prduct Image</h3>
                <div class="m-4">
                    <img src="/product-images/{{productDetails._id}}.jpg" style="width: 300px; height: 300px;" id="Img">

                </div>
             </div>
        </div>
    </div>
</section>
<script>
    function changeImage(event){
        document.getElementById('Img').src=URL.createObjectURL(event.target.files[0])
    }
</script>