<div style="margin:30px 30px ;" >
    <h3 class="text-center" style="margin-top:50px ; margin-bottom: 40px;">All orders</h3>
    <table class="table border">
        <thead class="thead-dark ">
            <tr>
                <th scope="col">User Id</th>
                <th scope="col">OrderId</th>
                <th scope="col">Amount</th>
                <th scope="col">Payment</th>
                <th scope="col">Items</th>
                
            </tr>
        </thead>
        <tbody class="bg-light">
            {{#each orders}}
            <tr>

                <td>{{this.user}}</td>
                <td>{{this._id}}</td>
                <td>{{this.amount}}</td>
                <td>{{this.payment}}</td>
                {{#each this.products}}
                 <td class="row">{{this.item}}</td>
                 {{/each}}
                {{!-- <td>
                    <a href="/admin/edit-product?proId={{this._id}}" class="btn btn-primary">Edit</a>
                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                        onclick="return confirm('Do you really want to delete this item?')">Delete</a>
                </td> --}}

            </tr>
            {{/each}}
        </tbody>

    </table>
</div>